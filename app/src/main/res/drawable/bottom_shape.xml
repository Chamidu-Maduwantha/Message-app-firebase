<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">


    <item>
        <shape>
            <solid android:color="#C63D3D"/>
            <corners android:topRightRadius="15dp"
                android:topLeftRadius="15dp"/>
            <stroke android:width="1dp" android:color="#0037FF"/>
        </shape>

    </item>

    <item
        android:right="2dp"
        android:left="2dp"
        android:top="4dp"
        >
        <shape>
            <solid android:color="#D1D1CE"/>
            <corners android:topRightRadius="15dp"
                android:topLeftRadius="15dp"/>
        </shape>

    </item>


</layer-list>